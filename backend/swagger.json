{
  "openapi": "3.0.0",
  "info": {
    "title": "Reverb Collaborative Platform API",
    "version": "1.0.0",
    "description": "API documentation for the Reverb music collaboration project."
  },
  "tags": [
    {
      "name": "Authentication",
      "description": "User registration and login and logout"
    },
    {
      "name": "Profile",
      "description": "User profile management"
    },
    {
      "name": "Home",
      "description": "Home page content"
    },
    {
      "name": "Friends",
      "description": "Friends management (add, list, remove)"
    },
    {
      "name": "Collaboration",
      "description": "Real-time collaboration sessions and audio processing"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "JohnDoe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "Password123"
                  }
                },
                "required": [
                  "username",
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Bad request - invalid input"
          },
          "409": {
            "description": "Conflict - email already in use"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "Password123"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful, returns token"
          },
          "400": {
            "description": "Bad request - missing fields or invalid"
          },
          "401": {
            "description": "Unauthorized - invalid credentials"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Logout the user (blacklist token)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token blacklisted successfully",
            "content": {
              "application/json": {
                "example": {
                  "msg": "Logged out successfully"
                }
              }
            }
          },
          "400": {
            "description": "Token missing or invalid",
            "content": {
              "application/json": {
                "example": {
                  "msg": "Token missing"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized or already blacklisted",
            "content": {
              "application/json": {
                "example": {
                  "msg": "Token has been blacklisted"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/profile": {
      "get": {
        "tags": [
          "Profile"
        ],
        "summary": "Get the logged-in user's profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Profile fetched"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      },
      "put": {
        "tags": [
          "Profile"
        ],
        "summary": "Update the logged-in user's profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "NewUsername"
                  },
                  "password": {
                    "type": "string",
                    "example": "NewPassword123!"
                  },
                  "profilePic": { "type": "string", "format": "binary" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Profile updated"
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/home": {
      "get": {
        "tags": [
          "Home"
        ],
        "summary": "Get home page welcome content and feature list",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Home content fetched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "welcome": {
                      "type": "string",
                      "example": "Welcome to Reverb, JohnDoe!"
                    },
                    "features": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string",
                            "example": "Real-time Audio Editing"
                          },
                          "description": {
                            "type": "string",
                            "example": "Edit and mix tracks with your team live, from anywhere in the world."
                          },
                          "image": {
                            "type": "string",
                            "example": "https://cdn-icons-png.flaticon.com/512/727/727218.png"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/friends": {
      "get": {
        "tags": [
          "Friends"
        ],
        "summary": "Get list of friends",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Friends listed"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/friends/request": {
      "post": {
        "tags": [
          "Friends"
        ],
        "summary": "Send friend request by email",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Friend request sent"
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "User not found"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/friends/requests": {
      "get": {
        "tags": [
          "Friends"
        ],
        "summary": "List incoming friend requests",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Requests listed"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/friends/accept/{id}": {
      "post": {
        "tags": [
          "Friends"
        ],
        "summary": "Accept a friend request",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Friend request ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Friend request accepted"
          },
          "404": {
            "description": "Request not found"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/friends/decline/{id}": {
      "post": {
        "tags": [
          "Friends"
        ],
        "summary": "Decline a friend request",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Friend request ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Friend request declined"
          },
          "404": {
            "description": "Request not found"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/friends/{id}": {
      "delete": {
        "tags": [
          "Friends"
        ],
        "summary": "Remove a friend",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Friend removed"
          },
          "404": {
            "description": "Friend not found"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/collaboration/session": {
      "post": {
        "tags": [
          "Collaboration"
        ],
        "summary": "Create a new collaboration session",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "New Session"
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Session created"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/collaboration/join": {
      "post": {
        "tags": [
          "Collaboration"
        ],
        "summary": "Join an existing collaboration session",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sessionId": {
                    "type": "string",
                    "example": "605c39ef40ee8b2f24e6f5c4"
                  }
                },
                "required": [
                  "sessionId"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Joined session"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Session not found"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/collaboration/plugins": {
      "get": {
        "tags": [
          "Collaboration"
        ],
        "summary": "List available audio plugins",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Plugins listed"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
      }
    },
    "/api/collaboration/process": {
      "post": {
        "tags": [
          "Collaboration"
        ],
        "summary": "Apply audio plugin to an uploaded file",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fileId": {
                    "type": "string",
                    "example": "60a77b9738a07e001f8b1234"
                  },
                  "plugin": {
                    "type": "string",
                    "example": "Reverb",
                    "description": "Plugin to apply (e.g., Reverb or Chorus)"
                  }
                },
                "required": [
                  "fileId",
                  "plugin"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns the processed audio"
          },
          "400": {
            "description": "Missing input"
          },
          "403": {
            "description": "Unauthorized access to file"
          },
          "404": {
            "description": "File not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/collaboration/upload": {
      "post": {
        "tags": [
          "Collaboration"
        ],
        "summary": "Upload an audio file (optionally for a session)",
        "parameters": [
          {
            "name": "sessionId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Optional session ID to associate file"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "audio": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "audio"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File uploaded successfully"
          },
          "400": {
            "description": "No file uploaded"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/api/collaboration/files/{id}/download": {
      "get": {
        "tags": [
          "Collaboration"
        ],
        "summary": "Download a specific file by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the file to download"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the file as download",
            "content": {
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - not authorized to access this file"
          },
          "404": {
            "description": "File not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/collaboration/files/{id}/play": {
      "get": {
        "tags": [
          "Collaboration"
        ],
        "summary": "Play an uploaded audio file (streamed)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the uploaded audio file"
          }
        ],
        "responses": {
          "200": {
            "description": "Audio file streamed successfully",
            "content": {
              "audio/mpeg": {},
              "audio/wav": {}
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Not allowed to access this audio file"
          },
          "404": {
            "description": "File not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/collaboration/files": {
      "get": {
        "tags": [
          "Collaboration"
        ],
        "summary": "List uploaded files (personal or for session)",
        "parameters": [
          {
            "name": "sessionId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Optional session ID to filter files shared in session"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Files listed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string"
                      },
                      "filename": {
                        "type": "string"
                      },
                      "path": {
                        "type": "string"
                      },
                      "owner": {
                        "type": "object",
                        "properties": {
                          "_id": {
                            "type": "string"
                          },
                          "username": {
                            "type": "string"
                          },
                          "email": {
                            "type": "string"
                          }
                        }
                      },
                      "session": {
                        "type": "object",
                        "properties": {
                          "_id": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          }
                        }
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden (if unauthorized for session)"
          },
          "404": {
            "description": "Session not found (if sessionId invalid)"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/collaboration/files/{id}/rename": {
      "put": {
        "tags": ["Collaboration"],
        "summary": "Rename an uploaded audio file",
        "description": "Allows the owner of a file to rename it. The file extension will be preserved automatically.",
        "operationId": "renameFile",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the file to rename"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["newName"],
                "properties": {
                  "newName": {
                    "type": "string",
                    "example": "MyEditedSong",
                    "description": "New filename (without extension)"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "File renamed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Renamed"
                    },
                    "file": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string",
                          "example": "664b21327f5e2e3a9c728c13"
                        },
                        "filename": {
                          "type": "string",
                          "example": "MyEditedSong.wav"
                        },
                        "path": {
                          "type": "string",
                          "example": "/uploads/MyEditedSong.wav"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing or invalid new name"
          },
          "403": {
            "description": "User is not authorized to rename the file"
          },
          "404": {
            "description": "File not found"
          }
        }
      }
    },
    "/api/collaboration/invite": {
      "post": {
        "tags": [
          "Collaboration"
        ],
        "summary": "Invite a friend to a session",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sessionId": {
                    "type": "string",
                    "example": "sessionIdHere"
                  },
                  "inviteeId": {
                    "type": "string",
                    "example": "friendUserIdHere"
                  }
                },
                "required": [
                  "sessionId",
                  "inviteeId"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Invite sent"
          },
          "403": {
            "description": "Not authorized"
          },
          "404": {
            "description": "Session not found"
          },
          "409": {
            "description": "Invite already sent"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/collaboration/invites": {
      "get": {
        "tags": [
          "Collaboration"
        ],
        "summary": "List incoming session invites",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Invites listed"
          },
          "500": {
            "description": "Server error"
          },
          "403": {
            "description": "Forbidden - insufficient permissions or access denied"
          }
        }
